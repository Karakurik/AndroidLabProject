<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/listFragment">

    <fragment
        android:id="@+id/listFragment"
        android:name="com.itis.androidlabproject.fragment.ListFragment"
        android:label="ListFragment"
        tools:layout="@layout/fragment_list">
        <action
            android:id="@+id/action_listFragment_to_detailsFragment"
            app:destination="@id/detailsFragment" />
        <action
            android:id="@+id/action_listFragment_to_firstFragment"
            app:destination="@id/firstFragment" />
        <action
            android:id="@+id/action_listFragment_to_thirdFragment"
            app:destination="@id/thirdFragment" />
    </fragment>

    <fragment
        android:id="@+id/firstFragment"
        android:name="com.itis.androidlabproject.fragment.FirstFragment"
        android:label="FirstFragment"
        tools:layout="@layout/fragment_first">
    </fragment>

    <fragment
        android:id="@+id/thirdFragment"
        android:name="com.itis.androidlabproject.fragment.CardViewFragment"
        android:label="ThirdFragment"
        tools:layout="@layout/fragment_third">
    </fragment>

    <fragment
        android:id="@+id/detailsFragment"
        android:name="com.itis.androidlabproject.fragment.DetailsFragment"
        android:label="DetailsFragment"
        tools:layout="@layout/fragment_details">
        <action
            android:id="@+id/action_detailsFragment_to_listFragment"
            app:destination="@id/listFragment" />
    </fragment>
</navigation>
