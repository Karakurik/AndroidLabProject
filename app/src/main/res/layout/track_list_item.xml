<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#00ffffff">

    <ImageView
        android:id="@+id/track_list_item_cover"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/alert_dark_frame" />

    <TextView
        app:layout_constraintVertical_chainStyle="packed"
        android:id="@+id/track_list_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/default_title"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@+id/track_list_item_cover"
        app:layout_constraintTop_toTopOf="@+id/track_list_item_cover"
        app:layout_constraintBottom_toTopOf="@id/track_list_item_author"/>

    <TextView
        android:id="@+id/track_list_item_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:text="@string/default_author"
        android:textColor="#AFAFAF"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/track_list_item_cover"
        app:layout_constraintTop_toBottomOf="@+id/track_list_item_title"
        tools:ignore="SmallSp" />


</androidx.constraintlayout.widget.ConstraintLayout>
